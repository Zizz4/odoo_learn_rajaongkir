<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_refresh_note" model="ir.ui.view">
            <field name="name">sale.order.form.refresh.note</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@name='order_lines']/group[@name='note_group']" position="before">
                    <button string="Refresh Note" icon="fa-print" type="object" name="action_refresh_terms"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>